<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
	Version="9.0"
	ExtensionBundleId="com.ae.discordrpc"
	ExtensionBundleVersion="1.0.6"
	ExtensionBundleName="AE Discord RPC"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<ExtensionList>
		<Extension Id="com.ae.discordrpc.panel" Version="1.0" />
	</ExtensionList>

	<ExecutionEnvironment>
		<HostList>
			<Host Name="AEFT" Version="17.0" />
		</HostList>

	<LocaleList>
		<Locale Code="All" />
	</LocaleList>

	<RequiredRuntimeList>
		<RequiredRuntime Name="CSXS" Version="9.0" />
	</RequiredRuntimeList>
</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.ae.discordrpc.panel">
			<DispatchInfo>

			<Resources>
				<MainPath>./client/index.html</MainPath>
				<ScriptPath>./host/index.jsx</ScriptPath>
				<CEFCommandLine>
					<Parameter>--enable-nodejs</Parameter>
					<Parameter>--mixed-context</Parameter>
				</CEFCommandLine>
			</Resources>

			<Lifecycle>
				<AutoVisible>true</AutoVisible>
			</Lifecycle>

			<UI>
				<Type>Panel</Type>
				<Menu>AE Minimal</Menu>
				<Geometry>
					<Size>
						<Height>400</Height>
						<Width>300</Width>
					</Size>
				</Geometry>
			</UI>
		</DispatchInfo>
	</Extension>
</DispatchInfoList>
</ExtensionManifest>
